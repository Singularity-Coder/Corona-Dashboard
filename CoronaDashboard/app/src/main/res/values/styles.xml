<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>

        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">Search Statistics</item>
    </style>

</resources>